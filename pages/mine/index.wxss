/**index.wxss**/
page{
  background-color: #fafafa;
}
.head{
  height: 125rpx;
  background-color: #ffffff;
  padding-top: 25rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.head_img{
  height: 100rpx;
  border-radius: 25rpx 25rpx 25rpx 25rpx;
  margin-left: 50rpx;
  margin-right: 25rpx;
  /* height: 150rpx; */
}
.head_text{
  text-align: center;
  position: relative;
  top: -30rpx;
  font-size: large;
  font-weight: bold;
}
.button-hover {
  color: transparent;
  background-color: transparent;
}

.head_button{
  background-color: transparent;
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  display: inline-block;
  line-height: 1;
  width: 80vw;
  height: 100rpx;
  position: absolute;
  bottom: 7%;
  top: 80rpx;
  left: 25%;
}
.head_button::after{
  border:none;
  /* border-radius: none; */
}

.line{
  height: 100rpx;
  background-color: #ffffff;
  margin-bottom: 25rpx;
  
}
.line_text{
  position: relative;
  top: 25rpx;
  left: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  font-weight: bold;
}